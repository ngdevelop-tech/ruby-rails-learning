<h1> Reset Password </h1>

<%= form_with model: @user, url: password_reset_edit_path(token: params[:token]), local:true do |f|%>
    <% if f.object.errors.any? %>
       <div class="alert alert-danger">
          <% f.object.errors.full_messages.each do |message| %>
            <div> <%= message %> </div>
          <%end%>
       </div> 
    <% end%> 

    <div class="form-group mb-3">
        <%= f.label :password %>
        <%= f.text_field :password, class: "form-control", placeholder: "your secret password" %>
    </div>
    <div class="form-group mb-3">
        <%= f.label :password_confirmation, "Confirm Password" %>
        <%= f.text_field :password_confirmation, class: "form-control", placeholder: 'confirm your secret password' %>
    </div>
    <div>
        <%= f.submit "Update password", disable_with: 'Submiting...', class:'btn btn-primary', turbo: false %>
    </div>
<% end %>
