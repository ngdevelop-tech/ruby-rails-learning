<h1> Reset Password </h1>

<%= form_with url: password_reset_path do |f| %>
    <div class="form-group mb-3">
        <%= f.label :email %>
        <%= f.text_field :email, class: "form-control", placeholder: "test@test.com" %>
    </div>
    <div>
        <%= f.submit "Reset Password", disable_with: 'Submiting...', class:'btn btn-primary', turbo: false %>
    </div>
<% end %>